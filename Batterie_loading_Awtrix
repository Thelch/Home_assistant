alias: Batterie_loading_Awtrix
description: ""
trigger:
  - platform: numeric_state
    entity_id: input_number.batterie_test
    above: 1
    enabled: false
  - platform: time_pattern
    minutes: /1
condition: []
action:
  - if:
      - condition: state
        entity_id: sensor.victron_system_battery_state
        state: CHARGING
      - condition: numeric_state
        entity_id: input_number.batterie_test
        above: 80
        below: 101
        enabled: true
    then:
      - service: input_boolean.turn_on
        data: {}
        target:
          entity_id: input_boolean.charging
      - service: mqtt.publish
        data:
          payload: >-
            {"text":"{{ states('input_number.batterie_test'
            )}}%","icon":"battery-charging-100","color":"#00ff1e"}
          topic: awtrix_a8f0d0/notify
          retain: true
    else:
      - service: input_boolean.turn_off
        data: {}
        target:
          entity_id: input_boolean.charging
  - if:
      - condition: state
        entity_id: sensor.victron_system_battery_state
        state: CHARGING
      - condition: numeric_state
        entity_id: input_number.batterie_test
        above: 60
        below: 81
    then:
      - service: mqtt.publish
        data:
          payload: >-
            {"text":"{{ states('input_number.batterie_test'
            )}}%","icon":"battery-charging-80","color":"#97db00"}
          retain: false
          topic: awtrix_a8f0d0/notify
  - if:
      - condition: state
        entity_id: sensor.victron_system_battery_state
        state: CHARGING
      - condition: numeric_state
        entity_id: input_number.batterie_test
        above: 40
        below: 61
    then:
      - service: mqtt.publish
        data:
          payload: >-
            {"text":"{{ states('input_number.batterie_test'
            )}}%","icon":"battery-charging-60","color":"#cbb200"}
          retain: false
          topic: awtrix_a8f0d0/notify
  - if:
      - condition: state
        entity_id: sensor.victron_system_battery_state
        state: CHARGING
      - condition: numeric_state
        entity_id: input_number.batterie_test
        above: 20
        below: 41
    then:
      - service: mqtt.publish
        data:
          payload: >-
            {"text":"{{ states('input_number.batterie_test'
            )}}%","icon":"battery-charging-40","color":"#ed8300"}
          retain: false
          topic: awtrix_a8f0d0/notify
  - if:
      - condition: state
        entity_id: sensor.victron_system_battery_state
        state: CHARGING
      - condition: numeric_state
        entity_id: input_number.batterie_test
        above: 0
        below: 21
    then:
      - service: mqtt.publish
        data:
          payload: >-
            {"text":"{{ states('input_number.batterie_test'
            )}}%","icon":"battery-charging-20","color":"#fd4500"}
          retain: false
          topic: awtrix_a8f0d0/notify
mode: single
